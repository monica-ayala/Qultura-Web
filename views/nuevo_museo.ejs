<%- include('includes/header_image.ejs') %>
    <main>
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content pb-0">
                            <div class="card-header mb2"> 
                                <h4 class="card-title"> Regístra un nuevo museo </h4>
                                <button onclick="addSalas()" id="addSalas" class="waves-effect waves-dark btn">add</button>
                            </div>
                            <ul class="stepper horizontal">
                            <li class="step active">
                                <div class="step-title waves-effect"> Información general del museo </div>
                                <div class="step-content">
                                 <div class="row">
                                     <div class="col s5">
                                         <div class="row valign-wrapper">
                                             <div class="col s10">
                                                 <div class="card imgPicker">
                                                     <div class="card-image">
                                                         <img class="imgPicker imgP" src="/img/no-img.jpg">
                                                         <div class="primary-color waves-effect waves-light btn-floating halfway-fab button-upload"
                                                             onclick="filebutton.click()"><i class="material-icons">edit</i></div>
                                                         <input class="file-upload" id="filebutton" type="file" name="url_imagen"
                                                             style="display:none">
                                                     </div>
                                                 </div>
                                             </div>
                                         </div>
                                     </div>
                                     <div class="col s7">
                                         <!-- NOMBRE -->
                                         <div class="row center">
                                             <div class="input-field col s10 offset-s1">
                                                 <input placeholder="Ej: MAQRO" id="nom_museo" name="nom_museo" type="text"
                                                     class="validate">
                                                 <label for="nom_museo"> Nombre del Museo </label>
                                             </div>
                                             <!-- TELÉFONO -->
                                             <div class="input-field col s10 offset-s1">
                                                 <input placeholder="Ej: 442-212-2357" id="num_museo" name="num_museo" type="text"
                                                     class="validate">
                                                 <label for="num_museo"> Teléfono de contacto </label>
                                             </div>
                                             <!-- HORARIOS -->
                                             <div class="input-field col s10 offset-s1">
                                                 <input placeholder="17HRS - 20HRS" id="horario_museo" name="horario_museo" type="text"
                                                     class="validate">
                                                 <label for="horario_museo"> Horario </label>
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                                   <div class="step-actions">
                                      <!-- Here goes your actions buttons -->
                                      <button class="waves-effect waves-dark btn next-step">CONTINUE</button>
                                   </div>
                                </div>
                             </li>
                             <li class="step">
                                 <div class="step-title waves-effect"> Ubicación del museo </div>
                                 <div class="step-content">
                                     <!-- DIRECCIÓN -->
                                     <div class="input-field col s5">
                                         <input placeholder="Ej: C. Ignacio Allende Sur 14" name="ubicacion_museo"
                                             id="ubicacion_museo" type="text" class="validate">
                                         <label for="ubicacion_museo"> Dirección </label>
                                         <div> Google Maps API integration goes here </div>
                                     </div>
                                    <div class="step-actions">
                                       <!-- Here goes your actions buttons -->
                                       
                                    </div>
                                 </div>
                              </li>
                              <li class="step">
                                 <div class="step-title waves-effect"> Descripción del museo </div>
                                 <div class="step-content">
                                     <!-- DESCRIPCION -->
                                     <div class="input-field col s10 offset-s1">
                                         <textarea id="desc_museo" name="desc_museo"
                                             class="materialize-textarea validate"></textarea>
                                         <label for="desc_museo"> Descripción </label>
                                     </div>
                                     <div> QUILL TEXT EDITOR? </div>
                                    
                                    <div class="step-actions">
                                       <!-- Here goes your actions buttons -->
                                       
                                    </div>
                                 </div>
                              </li>
                          </ul>
                        </div>
                    </div>
                    
                </div>
            </div>
       
        
            
    </main>
    <script src="/js/script_stepper_museo.js"></script>
    <%- include('includes/footer.ejs') %>