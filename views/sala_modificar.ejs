<%- include('includes/header_image.ejs') %>
    <main>
        <form method="POST" enctype="multipart/form-data">
            <% for (let m of museo){%>
                <% for (let sala of salas){%>
                    <div class="container">
                        <h1 class="white-text">Nuevo museo</h1>

                        <div class="white min-container">
                            <div class="row center margin-10">
                                <!-- valign-wrapper -->
                                <div class="col s5">
                                    <div class="row valign-wrapper">
                                        <div class="col s10">
                                            <div class="card imgPicker">
                                                <div class="card-image">
                                                    <img class="imgPicker imgP" src="/uploads/<%=sala.img_sala%>">
                                                    <input style="display:none" name="url_sala"
                                                        value="<%=sala.img_sala%>">
                                                    <div class="primary-color waves-effect waves-light btn-floating halfway-fab button-upload"
                                                        onclick="filebutton.click()"><i class="material-icons">edit</i>
                                                    </div>
                                                    <input class="file-upload" id="filebutton" type="file"
                                                        name="url_imagen" style="display:none">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col s7">
                                    <div class="row center">
                                        <div class="input-field col s10 offset-s1">
                                            <input placeholder="Ej: Libertad" id="nom_sala" name="nom_sala" type="text"
                                                value="<%=sala.nom_sala%>" class="validate">
                                            <label for="nom_sala"> Nombre de sala </label>
                                        </div>

                                        <div class="input-field col s10 offset-s1">
                                            <div class="file-field input-field">
                                                <div class="btn">
                                                    <span> Mp3</span>
                                                    <input type="file">
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <input placeholder="audioguía (archivo mp3)"
                                                        class="file-path validate" value="<%=sala.audio_sala%>"
                                                        name="file" type="text">
                                                </div>

                                            </div>

                                        </div>

                                        <div class="col offset-s1">
                                            <div class="col">
                                                <a href="/museo/<%=m.id_museo%>/<%=sala.id_sala%>/obras"
                                                    class="btn waves-effect waves-light primary-color"><i
                                                        class="material-icons left">settings</i> Editar obras </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row center margin-10">
                                <div class="input-field col s10 offset-s1">
                                    <textarea id="desc_sala" name="desc_sala"
                                        class="materialize-textarea validate"> <%=sala.desc_sala%> </textarea>
                                    <label for="desc_sala"> Descripción </label>
                                </div>

                                <button type="submit" value="upload"
                                    class="btn waves-effect waves-light green margin-10">
                                    <i class="material-icons left">check</i>
                                    Guardar cambios
                                </button>
                            </div>
                        </div>

                    </div>
                    <%}%>
                        <%}%>
        </form>
    </main>

    <%- include('includes/footer.ejs') %>